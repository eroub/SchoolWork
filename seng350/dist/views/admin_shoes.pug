extends layout

block content
    p #[a(href='/admin') Back]&nbsp
    h1 All Shoes:
    for shoe in shoes
        h2 #{shoe.brand}  #{shoe.model} #{shoe.colorway}
        h3 Shoe ID: #{shoe.shoe_id}
        p Current Price: $#{shoe.current_price}
        p Retail Price: $#{shoe.retail_price}
        p Size: #{shoe.size}



        a(href='/admin/shoes/' + 'edit_shoe/' + shoe.shoe_id )
            button.btn.btn-primary(type='button') Edit Shoe
        p
        form(method='post' action='/admin/shoes/' + 'del_shoe/' + shoe.shoe_id )
            div.form-group
            button.btn.btn-primary(type='submit') Delete shoe


    h1 Add Shoe:

    form(method='POST' action='/admin/shoes/add_shoe')
        div.form-group
            div.form-group
            label Brand:&nbsp
            input#brand.form-control(type='text', placeholder='brand name', name='brand')
            div.form-group
            p
            label Model:&nbsp
            input#md.form-control(type='text', placeholder=' model', name='model')
            div.form-group
            p
            label Colorway:&nbsp
            input#cw.form-control(type='text', placeholder='colorway', name='colorway')
            div.form-group
            p
            label Current Price: $
            input#cp.form-control(type='text', placeholder='current price', name='current_price')
            div.form-group
            p
            label Retail Price: $
            input#rp.form-control(type='text', placeholder='retail price', name='retail_price')
            div.form-group
            p
            label Size:&nbsp
            input#sz.form-control(type='text', placeholder='size', name='size')
            p
        button.btn.btn-primary(type='submit') Add Shoe

