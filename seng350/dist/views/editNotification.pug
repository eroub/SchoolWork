extends layout

block content
    a(href='/user/' + id + '/notifications') Back
    h1 Edit Notification
    form(method='POST' action='/user/' + id + '/edit_notification/' + notification._id)
        div.form-group
            label Price Threshold:&nbsp
            input#name.form-control(type='text', placeholder='$0', name='threshold', value=notification.threshold)
            p
        p Notification Type:
        div.form-group
            div.form-group
            p
            if notification.type == 'Above'
                input#above.form-control(type='radio', name='type', value='Above' checked)
                label Above
                div.form-group
                input#below.form-control(type='radio', name='type', value='Below')
                label Below
            else
                input#above.form-control(type='radio', name='type', value='Above')
                label Above
                div.form-group
                input#below.form-control(type='radio', name='type', value='Below' checked)
                label Below


        p
        button.btn.btn-primary(type='submit') Save Changes
